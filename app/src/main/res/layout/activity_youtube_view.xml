<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureWithLargestChild="false"
    android:orientation="vertical">

    <fr.bmartel.youtubetv.YoutubeTvView
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.9"
        app:yt_autoHide="auto"
        app:yt_closedCaptions="true"
        app:yt_debug="false"
        app:yt_showBorder="true"
        app:yt_showControls="none"
        app:yt_showNowPlayingCard="true"
        app:yt_showRelatedVideos="false"
        app:yt_showVideoInfo="false"
        app:yt_videoAnnotation="false"
        app:yt_videoId="6pxRHBw-k8M"
        app:yt_videoQuality="hd1080" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:text="PLAY" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/play_button"
            android:background="@drawable/button"
            android:padding="2dp"
            android:text="PAUSE" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/pause_button"
            android:background="@drawable/button"
            android:text="NEXT" />

        <Button
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/next_button"
            android:background="@drawable/button"
            android:text="PREVIOUS" />

        <Button
            android:id="@+id/backward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/previous_button"
            android:background="@drawable/button"
            android:text="&lt;&lt;" />

        <Button
            android:id="@+id/forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/backward_button"
            android:background="@drawable/button"
            android:text="&gt;&gt;" />

    </RelativeLayout>

</LinearLayout>